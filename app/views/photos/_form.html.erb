<div class="page-header"><h1>Upload Photo</h1></div>

<%= puts "@photo: #{@photo.inspect}" %>
<%= puts "current_user: #{current_user.inspect}" %>
<%= form_for @photo do |f| %>
  <%= render :partial => '/shared/errors', object: @photo %>

  <div class="form-group">
    <%= f.hidden_field :user_id, class: 'form-control' %>
  </div>


  <!-- <div class="form-group">
    <%= f.label :content_type %>
    <%= f.text_field :content_type, class: 'form-control' %>
  </div> -->

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>

<% end %>
