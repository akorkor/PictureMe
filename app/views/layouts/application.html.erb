<!DOCTYPE html>
<html>
  <head>
    <title>PictureMeMaster</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <p class="notice"><%= notice %></p>

  <body>
    <!-- ======= menu bar =======  -->
    <div id="menuBar">
      <%= render :partial => '/photos/menu' %>
    </div>

    <!-- ======= menu bar =======  -->
    <div id="yieldDiv">
      <%= yield %>
    </div>

    <!-- == alert container == -->
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>

  </body>
</html>
